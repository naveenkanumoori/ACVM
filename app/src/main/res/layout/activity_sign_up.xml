<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.naveenkumar.ssdiproject.SignUPActivity"
    android:background="@drawable/background">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sfirstname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="First Name"
        android:textAlignment="center"
        android:layout_marginTop="30sp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/slastname"
        android:layout_below="@+id/sfirstname"
        android:layout_alignLeft="@+id/sfirstname"
        android:layout_alignStart="@+id/sfirstname"
        android:hint="Last Name"
        android:textAlignment="center" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sloginid"
        android:layout_below="@+id/slastname"
        android:layout_centerHorizontal="true"
        android:hint="Login ID"
        android:textAlignment="center" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/semailid"
        android:layout_below="@+id/sloginid"
        android:layout_alignLeft="@+id/sloginid"
        android:layout_alignStart="@+id/sloginid"
        android:hint="Email ID"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/sphoneno"
        android:layout_below="@+id/semailid"
        android:layout_alignLeft="@+id/semailid"
        android:layout_alignStart="@+id/semailid"
        android:layout_alignRight="@+id/semailid"
        android:layout_alignEnd="@+id/semailid"
        android:hint="Phone No"
        android:textAlignment="center" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/spassword"
        android:layout_below="@+id/sphoneno"
        android:layout_alignLeft="@+id/sphoneno"
        android:layout_alignStart="@+id/sphoneno"
        android:hint="Password"
        android:textAlignment="center" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/srpassword"
        android:layout_below="@+id/spassword"
        android:layout_centerHorizontal="true"
        android:hint="Retype Password"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/srpassword"
        android:layout_alignLeft="@+id/srpassword"
        android:layout_alignStart="@+id/srpassword">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/sbuttonCancel"
            android:background="@drawable/roundedcorners"
            android:layout_marginRight="10sp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/sbuttonSignUp"
            android:background="@drawable/roundedcorners"/>
    </LinearLayout>

</RelativeLayout>
